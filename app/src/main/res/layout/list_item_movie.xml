<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/movie_poster_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="296dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_title"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:minHeight="?listPreferredItemHeightSmall"
        android:paddingBottom="@dimen/movie_title_padding_vertical"
        android:paddingEnd="@dimen/movie_title_padding_horizontal"
        android:paddingStart="@dimen/movie_title_padding_horizontal"
        android:paddingTop="@dimen/movie_title_padding_vertical"
        tools:text="Title" />

</LinearLayout>